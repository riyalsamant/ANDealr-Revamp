<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient"
    >

    <com.ascentsmartwaves.andealrrevamp.custom.CustomTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/deal_tittle_text_andealr_fragment"
        android:padding="5dp"
        android:textColor="#FFF"
        android:textSize="@dimen/twenty_two_sp"
        android:textStyle="bold"
        />


    <com.ascentsmartwaves.andealrrevamp.custom.CustomTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:id="@+id/deal_description_text_andealr_fragment"
        android:padding="5dp"
        android:textColor="#FFF"
        android:layout_below="@+id/deal_name_text_andnrby_fragment"
        android:textSize="@dimen/twenty_sp"
        android:textStyle="bold"
        />


</LinearLayout>